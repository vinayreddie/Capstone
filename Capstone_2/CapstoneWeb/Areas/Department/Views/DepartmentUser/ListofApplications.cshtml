                                <th>Sl.No</th>
                                <th>Service Name</th>
                                <th>ApplicantName</th>  
                                <th></th>                             
                            </tr>
                            @if (Model != null)
                            {     
                            for (int i = 0; i < Model.Count; i++)
                            {
                                    <tr>
                                        <td>@Convert.ToInt32(i + 1)</td>
                                        <td>@Model[i].ServiceName</td>
                                        <td>@Model[i].ApplicantName</td>
                                        <td>@Html.ActionLink("Action", "Approval", new { TransactionId = Model[i].Id, ServiceId = Model[i].ServiceId,AId=Model[i].AmendmentId,TSId=Model[i].TranServiceId, Type= Model[i].Type })</td>
                                    </tr>
                            }
                            }
                        </thead>
                        <tbody></tbody>                      

                    </table>
                </div>
                
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
