
@{
    ViewBag.Title = "DepartmentAdmin";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3></h3>

                    <p>Add Designation</p>
                </div>
                <div class="icon">
                    <i class="fa fa-building-o"></i>
                </div>
                <a href="@Url.Action("CreateDesignation","Designation",new { Area = "Department" })" class="small-box-footer">View Details <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3></h3>

                    <p>Add User</p>
                </div>
                <div class="icon">
                    <i class="fa fa-user"></i>
                </div>
                <a href="@Url.Action("AddUser","Account",new { Area = "" })"  class="small-box-footer">View Details <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3><span id="spanBeyondSLA"></span></h3>

                    <p>Add Workflow</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="@Url.Action("Workflow","Workflow",new { Area = "Department" })"  class="small-box-footer">View Details <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="row" id="divWithinSLA" hidden>
        <div class="box">
            <a href="#">Query Raised <span id="spanQueryRaised"></span></a> <br />
            <a href="#">Responded <span id="spanResponded"></span></a><br />
            <a href="@Url.Action("ListofApplications","DepartmentUser","Department")">Pending <span id="spanPending"></span></a><br />
            <a href="#">Return/Reject <span id="spanReturn"></span> </a><br />
            <a href="#">Forwarded <span id="spanForwarded"></span> </a>
        </div>
    </div>
</section>

