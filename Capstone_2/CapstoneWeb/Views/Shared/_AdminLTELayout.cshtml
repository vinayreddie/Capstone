<script>    
    function ShowEmployeeUploads(json) {
        $('#divEmployeeUploadsPopup').modal('show');

        $('#spanEmployeeDescription').text(json.EmployeeDescription);

        $('#tblEmployeeUploadsPopup tr').not(function () { return !!$(this).has('th').length; }).remove();
