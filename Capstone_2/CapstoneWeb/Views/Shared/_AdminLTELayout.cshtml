    // Returns Converted Date from  dd-MM-yyyy
    function customDateParse2(sDate) {
        
        var sptdate = String(sDate).split("-");
        var myDay = sptdate[0];
        var myMonth = sptdate[1];
        var myYear = sptdate[2];
        var DateConv = myYear + "-" + myMonth + "-" + myDay;
        DateConv = new Date(DateConv);
        return DateConv;
    }

